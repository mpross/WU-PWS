<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.mpross.pws.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:text="Loading..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:textSize="30sp" />

    <com.jjoe64.graphview.GraphView
        android:layout_height="match_parent"
        android:id="@+id/graph"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent" />

    <ScrollView
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textBox">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="50.7 F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temp"
                    tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="0dp"
                    android:textSize="50sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="invisible" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="visible">

                    <TextView
                        android:text="50.7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/highTemp"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toRightOf="@+id/temp"
                        app:layout_constraintTop_toTopOf="@+id/text1"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#A35B5B"
                        android:visibility="invisible" />

                    <TextView
                        android:text="37.6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/lowTemp"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@+id/highTemp"
                        app:layout_constraintLeft_toRightOf="@+id/temp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#5B7DA3"
                        android:visibility="invisible" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Dew: 40.3 F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dew"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="0dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/temp"
                    android:layout_marginRight="8dp"
                    android:visibility="invisible" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <TextView
                        android:text="42.1 F"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/highDew"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="@+id/dew"
                        app:layout_constraintLeft_toRightOf="@+id/dew"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:textColor="#A35B5B"
                        android:layout_marginTop="8dp"
                        android:visibility="invisible" />

                    <TextView
                        android:text="37.4 F"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/lowDew"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toRightOf="@+id/dew"
                        app:layout_constraintTop_toBottomOf="@+id/highDew"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#5B7DA3"
                        android:layout_margin="0dp"
                        android:visibility="invisible" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:text="30.12 inHg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="0dp"
                android:id="@+id/press"
                android:textSize="30sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/dew"
                android:layout_marginBottom="16dp"
                android:visibility="invisible" />

            <TextView
                android:text="Wind:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/windLabel"
                android:textSize="32sp"
                android:visibility="invisible" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:layout_width="50dp"
                    android:visibility="invisible" />

                <TextView
                    android:text="0.0 mph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/windSpeed"
                    tools:layout_editor_absoluteX="0dp"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteY="187dp"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/windDir"
                    android:text="NE"
                    android:textSize="24sp"
                    app:layout_constraintTop_toBottomOf="@+id/dayWindDeg"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toRightOf="@+id/windGust"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="0.30"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1">

                <TextView
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23"
                    android:visibility="invisible" />

                <TextView
                    android:text="Gust: 1.3 mph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/windGust"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/windSpeed"
                    android:layout_weight="0.05"
                    android:visibility="invisible" />

            </LinearLayout>

            <TextView
                android:text="Hourly Rain: 0.00 in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="0dp"
                android:id="@+id/rain"
                android:textSize="22sp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/windGust"
                android:layout_weight="1"
                android:visibility="invisible" />

            <TextView
                android:text="Humidity: 67%"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hum"
                tools:layout_editor_absoluteX="0dp"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/rain"
                android:visibility="invisible" />

            <ProgressBar
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="0dp"
                android:id="@+id/humBar"
                android:max="100"
                android:progress="67"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/hum"
                android:progressTint="#5BA366"
                android:visibility="invisible" />

            <TextView
                android:text="2017-04-09 12:41:00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                tools:layout_editor_absoluteX="0dp"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/humBar"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        ads:srcCompat="@mipmap/wind_icon"
        android:id="@+id/windIcon"
        android:adjustViewBounds="false"
        android:alpha=".5"
        android:elevation="4dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/graph"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp" />

    <ImageView
        android:layout_width="100dp"
        ads:srcCompat="@mipmap/cloud_icon"
        android:id="@+id/statusIcon"
        android:layout_weight="1"
        android:layout_height="100dp"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:elevation="3dp"
        android:layout_below="@+id/graph"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        ads:srcCompat="@mipmap/wind_dir"
        android:id="@+id/windDirIcon"
        android:layout_marginTop="107dp"
        android:layout_below="@+id/statusIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

</RelativeLayout>
