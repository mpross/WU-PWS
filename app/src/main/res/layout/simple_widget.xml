<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/widgetBackground"
    android:clipChildren="false"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appwidget_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/appwidget_text"
            android:fadingEdge="horizontal|vertical"
            android:text="52.0 F"
            android:textColor="@android:color/darker_gray"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/appwidget_dew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/appwidget_text"
            android:fadingEdge="horizontal|vertical"
            android:padding="1dp"
            android:text="55.8 F"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/windIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="11dp"
            android:adjustViewBounds="false"
            android:alpha=".5"
            android:elevation="4dp"
            android:visibility="invisible"
            android:srcCompat="@mipmap/wind_icon" />

        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_weight="1"
            android:elevation="3dp"
            android:visibility="invisible"
            android:srcCompat="@mipmap/cloud_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appwidget_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/appwidget_text"
            android:fadingEdge="horizontal|vertical"
            android:padding="5dp"
            android:text="30.28 inHg"
            android:textColor="#bdbdbd"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/appwidget_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/appwidget_text"
            android:fadingEdge="horizontal|vertical"
            android:padding="5dp"
            android:text="87%"
            android:textColor="#bdbdbd"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appwidget_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/appwidget_text"
            android:fadingEdge="horizontal|vertical"
            android:padding="5dp"
            android:text="0.0 mph"
            android:textColor="#bdbdbd"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/appwidget_windG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/appwidget_text"
            android:fadingEdge="horizontal|vertical"
            android:padding="5dp"
            android:text="2.7 mph"
            android:textColor="#bdbdbd"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/appwidget_wdir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/appwidget_text"
            android:fadingEdge="horizontal|vertical"
            android:padding="5dp"
            android:text="West"
            android:textColor="#bdbdbd"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>